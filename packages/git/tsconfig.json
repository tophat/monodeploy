{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "./lib",
        "noImplicitAny": true,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src"],
    "exclude": ["./src/**/*.test.ts", "./src/**/*.mock.ts", "./src/**/__mocks__/**/*.ts", "./src/**/test_utils.ts"]
}
