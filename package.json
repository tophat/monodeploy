{
    "name": "monodeploy",
    "version": "1.0.0",
    "description": "A small wrapper around yarn berry that makes it easier to use in CI",
    "main": "lib/monodeploy.js",
    "files": [
        "lib"
    ],
    "bin": "./lib/cli.js",
    "types": "./lib/monodeploy.d.ts",
    "repository": "git@github.com:tophat/monodeploy.git",
    "author": "Top Hat Monocle Corp. <opensource@tophat.com>",
    "license": "Apache-2.0",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "scripts": {
        "clean": "rm -rf ${ARTIFACT_DIR:-artifacts} lib node_modules && find ./src -name '*.js' -type f -delete",
        "test": "jest",
        "test:ci": "jest --ci",
        "test:update": "jest -u",
        "test:watch": "jest --watch",
        "test:registry:build": "docker build -t monodeploy-test-registry .",
        "test:registry:start": "docker run -itd -p 4873:4873 --name monodeploy-registry monodeploy-test-registry",
        "test:registry:stop": "docker stop monodeploy-registry && docker container rm monodeploy-registry",
        "test:registry:logs": "docker container logs -f monodeploy-registry",
        "test:registry": "yarn test:registry:build && yarn test:registry:start",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:ci": "eslint . --format junit --output-file ${ARTIFACT_DIR:-artifacts}/test_results/eslint/eslint.junit.xml",
        "types:generate": "tsc",
        "types:watch": "tsc --pretty --watch",
        "build:babel": "yarn babel src --out-dir=lib --no-copy-ignored --extensions '.ts' --ignore 'src/**/*.test.ts' --ignore 'src/**/*.mock.ts' --ignore 'src/**/__mocks__/**/*.ts'",
        "build:babel:watch": "yarn build:babel --watch",
        "build": "rm -rf lib && yarn build:babel && yarn types:generate",
        "prepack": "yarn build",
        "contrib:add": "all-contributors add",
        "contrib:generate": "all-contributors generate",
        "contrib:check": "all-contributors check"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-transform-runtime": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-typescript": "^7.12.7",
        "@commitlint/cli": "^11.0.0",
        "@tophat/commitizen-adapter": "^0.0.11",
        "@tophat/commitlint-config": "^0.1.2",
        "@tophat/conventional-changelog-config": "^0.0.9",
        "@tophat/eslint-config": "^0.7.0",
        "@types/chalk": "^2.2.0",
        "@types/conventional-changelog-writer": "^4.0.0",
        "@types/conventional-commits-parser": "^3.0.1",
        "@types/node": "^14.14.14",
        "@types/semver": "^7.3.4",
        "@types/yargs": "^15.0.12",
        "@typescript-eslint/eslint-plugin": "^4.10.0",
        "@typescript-eslint/parser": "^4.10.0",
        "@yarnpkg/cli": "^2.4.0",
        "@yarnpkg/pnpify": "^2.4.0",
        "all-contributors-cli": "^6.19.0",
        "babel-jest": "^26.6.3",
        "commitizen": "^4.2.3",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^5.0.6",
        "jest": "^26.6.3",
        "jest-junit": "^12.0.0",
        "lint-staged": "^10.5.3",
        "package-json": "^6.5.0",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "yaml-validator": "^3.0.0"
    },
    "dependencies": {
        "@yarnpkg/core": "^2.4.0",
        "@yarnpkg/fslib": "^2.4.0",
        "@yarnpkg/plugin-npm": "^2.4.0",
        "@yarnpkg/plugin-pack": "^2.2.3",
        "chalk": "^4.1.0",
        "conventional-changelog-writer": "^5.0.0",
        "conventional-commits-parser": "^3.2.0",
        "semver": "^7.3.4",
        "yargs": "^16.2.0"
    },
    "lint-staged": {
        "yarn.lock": [
            "yarn dedupe --check"
        ],
        "*.ts": [
            "yarn eslint",
            "yarn jest --findRelatedTests"
        ],
        "*.{yml,yaml}": [
            "yarn yaml-validator"
        ]
    },
    "engines": {
        "node": ">=14.15.0"
    }
}
